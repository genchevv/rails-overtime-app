<h1>Posts</h1>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>
					Overtime Requested
				</th>
				<th>
					Date
				</th>
				<th class="hidden-xs">
					Rationale
				</th>
				<th>
					Status
				</th>
				
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody id="posts">
			<%= render @posts %>
		</tbody>
	</table>
</div>

<div class="text-center" id="paginator">
	<%= paginate @posts, remote: true %>
</div>