<% recent_audit_items.each do |recent_audit_items| %>
    <div class="card col-md-4">
      <div class="card-block">
        <h4>
            <%= recent_audit_items.user.full_name %>
        </h4>
        
        <p>
            <span class="pending-details">Week starting:</span> <%= recent_audit_items.start_date %>
        </p>
        
        <p>
            <span class="pending-details">Confirmed at:</span> <%= recent_audit_items.end_date || status_label('pending') %>
        </p>
        
        <p>
            <span class="pending-details">Status:</span> <%= status_label recent_audit_items.status %>
        </p>
      </div>
    </div>
<% end %>